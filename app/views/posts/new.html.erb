<h2 class="text-center mt-2">Добавление нового поста</h2>
<%= form_for :post, url: posts_path, html: { multipart: true } do |f| %>
<% if @post.errors.any? %>
	
		<div class="alert alert-danger">
			<h5><%= t('common.errors') %></h5>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<%end%>
			</ul>
		</div>
		
	<% end %>
	<hr>
	 	<p>
	 		Название <br>
	 		<%= f.text_field(:title, {:class => 'form-control'}) %>
	 	</p>
	 	<p>
	 		Текст статьи <br>
	 		<%= f.text_area(:body, {:class => 'form-control'}) %>
	 	</p>
	 	<p>
	 		<%= f.file_field :image %>

	 	<p>
			 <%= f.submit class: 'btn btn-success', value: 'Добавить пост' %>
		 </p>
		 <% end %>