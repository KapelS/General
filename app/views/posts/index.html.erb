<h1>Все наши посты</h1>	
<% @post.each do |post| %>
<div class="alert alert-light">
<hr>
<section class="post-summary clearfix">
<%= image_tag post.image.url(:thumb), class: 'img-thumbnail thumb' if post.image? %>
<h3><%= post.title %></h3>
<p><%= post.body %></p>
</section>
<%= link_to "Читать далее", post_path(post), :class => 'btn btn-outline-primary' %>
</div>

<% end %>