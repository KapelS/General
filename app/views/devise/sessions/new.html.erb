<div class="text-center">
  <%= image_pack_tag 'twitter-logo.png', size: '35x30', alt: 'Logo', :class => "mt-2 mb-2"  %>
  <h2 class="text-center">Вход</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :"Электронная почта" %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field mt-1">
    <%= f.label :"Пароль" %>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"Запомнить меня?" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Войти", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
